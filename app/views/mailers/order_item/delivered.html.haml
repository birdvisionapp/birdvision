%div{:style=>"border-bottom: 5px solid #3DB2C3; padding-bottom:10px; border-radius: 10px; border-left: 1px solid #3DB2C3; border-right: 1px solid #3DB2C3;margin:5px 15px;padding:5px;"}
  %p= "Dear #{@order_item.order.user.full_name},"
  %div{:style=>"padding-left:20px"}
    %p
      = "We are pleased to confirm delivery of the following Item in your Order: #{@order_item.order.order_id}"
      = render 'mailers/order_item/details'
    %div
      = "The order was delivered to: "
      %div{:style=>"margin-left:20px"}
        %b= "#{@order_item.order.address_name}"
        %br
        = "#{@order_item.order.address_body}"
        %br
        = "#{@order_item.order.address_city}"
        = "#{@order_item.order.address_state}"
        = "#{@order_item.order.address_zip_code}"
        %br
        = "#{@order_item.order.address_landmark}"
    %p
      = "We hope your redemption experience was a pleasant one."

  = render :partial => "mailers/user/email_footer", :locals => {:user=>@order_item.order.user}
