%h1 Language Template Details

%h3.dl-header Template Details
%dl.dl-horizontal.draft_item
  %dt Name
  %dd= resource.name
  %dt Template
  %dd= resource.render_templates.join("<br />").html_safe
  %dt Status
  %dd= resource.status.titleize
  = display_time_stamp_details(resource)

=link_to 'Back', admin_language_templates_path, :class=> "btn"
- if can? :edit, LanguageTemplate
  = link_to 'Edit Template', edit_admin_language_template_path(resource.id), :class=> "btn btn-info"

