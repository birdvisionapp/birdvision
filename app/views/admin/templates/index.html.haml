%h1 Templates List
- if enable_template?
  = link_to("Create New Template",new_admin_template_path,:class=>'btn btn-info')
%br
  %br
    %table.table.table-bordered
      %tr
        %th Template Basis
        %th Template Name
        %th Template Content
        - if enable_template?
          %th Actions
      - @templates.each do |t|
        %tr
          %td= get_basis(t)
          %td= t.name
          %td= t.template_content
          - if enable_template?
            %td
              = link_to "Edit /", edit_admin_template_path(:id=>t.id)
              =link_to "Delete", admin_template_path(:id=>t.id),:method=>:delete , :confirm => "Are you sure you want to delete this template?"
