= render :partial => "share/messages", :locals => {:type => :alert, :message => @msp.errors.full_messages}

= nested_form_for [:admin, :user_management, @msp], :html => {:class => 'form-horizontal'} do |f|
  .fields-group
    %h3 MSP Details
    .control-group
      = f.label :name, :class => 'control-label mandatory-field'
      .controls
        = f.text_field :name
    .control-group
      = f.label :contact_name, :class => 'control-label mandatory-field'
      .controls
        = f.text_field :contact_name
    .control-group
      = f.label :email, :class => 'control-label mandatory-field'
      .controls
        = f.text_field :email
    .control-group
      = f.label :phone_number, :class => 'control-label mandatory-field'
      .controls
        = f.text_field :phone_number
    .control-group
      = f.label :address, :class => 'control-label mandatory-field'
      .controls
        = f.text_area :address, :rows => 5
    .control-group
      = f.label :opening_balance, :class => 'control-label mandatory-field'
      .controls
        = f.text_field :opening_balance
    .control-group
      = f.label :setup_charge, :class => 'control-label mandatory-field'
      .controls
        = f.text_field :setup_charge
    .control-group
      = f.label :fixed_amount, :class => 'control-label mandatory-field'
      .controls
        = f.text_field :fixed_amount
    .control-group
      = f.label :plan_details, :class => 'control-label mandatory-field'
      .controls
        = f.text_area :plan_details, :rows => 5
    .control-group
      = f.label :notes, :class => 'control-label mandatory-field'
      .controls
        = f.text_area :notes, :rows => 5
    .control-group
      = f.label :status, :class => 'control-label'
      .controls
        = f.select :status, Msp::Status::ALL.collect {|status| [status.titleize, status]}, {}, {:class => 'input-s-medium'}
    .control-group
      = f.label :is_targeted_offer_enabled, "Target Offer Enable",:class => 'control-label'
      .controls
        = f.check_box :is_targeted_offer_enabled, :class => 'fm-check-input bg-ck-med' 
  .control-group
    .controls
      = link_to 'Cancel', admin_user_management_msps_path, :class=> "btn"
      = f.button @msp.id.nil? ? "Create MSP" : "Save MSP", :class => 'btn btn-info'