%table.filters
  %tr
    %td
      = f.label :user_role_id_eq, "Participant Category"
      = f.collection_select :user_role_id_eq, @current_admin.select_options, :id, :name, {:include_blank => t(:all)}, :class => 'al-category-content-loader'
    %td
      = f.label :created_at_gteq, "Select Period"
      = f.select :created_at_gteq, { "Start Till Date" => "", "This Year" => Date.today.beginning_of_day.beginning_of_year, "Since Last Month" => 1.month.ago.beginning_of_month, "This Month" => Date.today.beginning_of_day.beginning_of_month }, {:prompt => 'Select Time Period'}, {:class => 'created-at-gteq'}
      / = f.hidden_field :created_at_lteq, :value => Date.today
    %td
      = f.label :telecom_circle_regional_managers_id_eq, "Region"
      = f.collection_select :telecom_circle_regional_managers_id_eq, @telecom_regions.select_options, :id, :region, {:include_blank => t(:all)}, :class => 'telecom_circle_regional_managers_id_eq'
  %tr
    %td
      = f.label :created_at_date_gteq,"Select Custom Time"
      = f.text_field :created_at_date_gteq, :class => 'datepicker input-small created-at-date-gteq'
      = f.label "-", :class=>"to"
      = f.text_field :created_at_date_lteq, :class => 'datepicker input-small created-at-date-gteq'