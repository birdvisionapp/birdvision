.span6.activate_account
  = form_for resource, :as => resource_name, :url => password_path(resource_name),
    :html => { :method => :put,:class => "authentication-form password-reset form-horizontal theme-auth-form", :novalidate=>'novalidate' } do |f|
    %h2="Activate your account"
    = f.hidden_field :reset_password_token
    = hidden_field_tag :mode, params[:mode]
    .control-group
      = f.label :password, "New password", :class => "control-label"
      .controls
        = f.password_field :password ,:class => "input-medium"
    .control-group
      = f.label :password_confirmation, "Confirm new password" ,:class => "control-label"
      .controls
        = f.password_field :password_confirmation ,:class => "input-medium"
    .control-group
      .controls
        =f.submit "Activate your account", :class => 'btn btn-info'