= render "share/messages", :type => :alert, :message => devise_error_messages!
%h1= "Change Password"
.admin-change-password
  = form_for(resource, :as => resource_name, :url => admin_user_registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f|
    .fields-group
      = render :partial => "devise/registrations/password_fields", :locals => {:f => f}
      .control-group
        .controls= f.submit "Save", :disable_with => "Please wait...", :class=>"btn btn-info"